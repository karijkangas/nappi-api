{
  "name": "nappi-api",
  "version": "0.0.1",
  "description": "Nappi REST API",
  "scripts": {
    "lint": "eslint ./src",
    "pretty": "prettier --check \"src/**/*.js\"",
    "test": "jest --config ./test-config.json",
    "coverage": "jest --config ./coverage-config.json",
    "precommit": "lint-staged && npm test",
    "lambda-server": "nodemon --inspect=0.0.0.0:9229 --watch tests --watch src tests/lambda-server.js",
    "systest": "jest --config ./tests/systest-config.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karijkangas/nappi-api"
  },
  "keywords": [],
  "author": "Kari Kangas <karijkangas@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "aws-sdk": "^2.493.0",
    "cors": "^2.8.5",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.17.1",
    "express-winston": "^3.2.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-circus": "^24.7.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "shelljs": "^0.8.3",
    "superagent": "^4.1.0",
    "supertest": "^3.4.2",
    "winston": "^3.2.1"
  },
  "dependencies": {},
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "browser": false,
      "node": true,
      "jest": true
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ],
      "no-await-in-loop": "off"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "npm run lint",
      "git add"
    ]
  }
}
